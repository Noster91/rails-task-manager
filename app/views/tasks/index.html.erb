<h1>List of Tasks</h1>
<ul>
  <% @tasks.each do |task| %>
    <li>
      <h3><%= link_to task.title, task_path(task) %></h3>
      <p><%= task.details %></p>
      <p><%= task.completed %></p>
      <input type="checkbox" checked="<%= task.completed %>">
    </li>
  <% end %>
  <p><%= link_to "Create a new Task", new_task_path %> </p>
</ul>
