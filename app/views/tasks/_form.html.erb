<div class="container">
  <div class="form-group">
    <%= form_with model: @task do |f| %>
      <div class="form-group row py-3">
        <%= f.label :title %>
        <%= f.text_field :title, class: "form-control" %>
      </div>
      <div class="form-group row py-3">
        <%= f.label :details %>
        <%= f.text_field :details, class: "form-control" %>
      </div>
      <%= f.submit class: "btn btn-default btn-primary" %>
    <% end %>
  </div>
</div>
