<div class="container">
  <div class="row">
    <h1>Task</h1>
    <h2 class="mt-4"> <%= @task.completed ? '<i class="fa-regular fa-square-check"></i>'.html_safe : '<i class="fa-regular fa-square"></i>'.html_safe %> <%= @task.title %></h2>
    <h3 class="mt-3">Details of the task</h3>
    <p class="mt-3"><%= @task.details %></p>
    <div class="d-flex justify-content-left align-items-center">
      <%= link_to "Back to Index", tasks_path, :class => "btn btn-primary m-2" %>
      <%= link_to "Edit Task", edit_task_path, :class => "btn btn-primary m-2" %>
      <%= link_to "Delete Task", task_path(@task),
      data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}, :class => "btn btn-danger m-2" %>
    </div>
  </div>
</div>
